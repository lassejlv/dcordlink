<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Dcordlink - Dashboard</title>
  </head>
  <body>
    <%- include("./includes/nav.ejs") %>

    <p class="toast-copied d-none" id="toast-copied">
      Copied link to clipboard
    </p>

    <% if(messageDeleted.length > 0) { %>
    <p class="toast-success"><%= messageDeleted %></p>
    <% } %>

    <script>
      setTimeout(function () {
        document.getElementById("toast-copied").classList.add("d-none");
      }, 3000);

      setTimeout(function () {
        document.querySelector(".toast-success").remove();
      }, 3000);
    </script>

    <div class="container text-center">
      <div class="row pt-4 mt-5">
        <h2 class="text-light">
          ðŸ¤— Welcome
          <span class="username"
            ><%= user.username %>#<%= user.discriminator %>
          </span>
        </h2>

        <p class="text-muted">
          To get started, you can create a new link or edit an existing one.
        </p>

        <hr style="margin: auto; width: 45rem; margin-top: 10px" size="4" />
      </div>
    </div>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card-body">
              <div class="row">
                <% for (let invite of invites) { %> <% if
                (invite.createdBy.username == user.username) { %>
                <div class="col-md-4">
                  <div class="card card-invite mb-3">
                    <div class="card-body">
                      <div class="container">
                        <p class="card-redirect">
                          <%= host %>/<%= invite.slug %>
                        </p>

                        <div class="text-center">
                          <button
                            class="btn-create btn-sm"
                            onclick="redirect('/dash/i/<%= invite._id %>/edit')"
                          >
                            <i class="fa-solid fa-pen-to-square"></i>
                          </button>
                          <button
                            class="btn-new btn-sm"
                            onclick="copy('<%= host %>/<%= invite.slug %>')"
                          >
                            <i class="fa-solid fa-copy"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %> <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text">
                    <button
                      class="btn-new"
                      data-mdb-toggle="modal"
                      data-mdb-target="#new"
                    >
                      Create a new link
                    </button>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <%- include("./includes/_create-modal.ejs") %>

    <script src="./assets/js/script.js"></script>
  </body>
</html>
